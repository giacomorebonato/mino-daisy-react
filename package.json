{
  "name": "mino-daisy-react",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giacomorebonato/mino-daisy-react.git"
  },
  "version": "1.1.19",
  "description": "React component library wrapping DaisyUI components",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "NODE_ENV=production bun build.ts && tsc --emitDeclarationOnly --declaration --declarationDir dist --noemit false",
    "dev": "bun build src/index.ts --watch",
    "test": "bun test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "biome check --write",
    "release": "bunx --bun release-it"
  },
  "keywords": [
    "react",
    "daisyui",
    "tailwindcss",
    "components",
    "ui"
  ],
