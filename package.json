{
  "name": "mino-daisy-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/giacomorebonato/mino-daisy-react.git"
  },
  "version": "1.0.1",
  "description": "React component library wrapping DaisyUI components",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --production --target=browser --outdir=dist && tsc --emitDeclarationOnly --declaration --declarationDir dist --noemit false",
    "dev": "bun build src/index.ts --watch",
    "test": "bun test",
    "storybook": "storybook dev -p 6006",
    "format": "biome check --write",
    "release": "release-it"
  },
  "keywords": [
    "react",
    "daisyui",
    "tailwindcss",
    "components",
    "ui"
  ],
  "author": "Giacomo Rebonato",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "peerDependencies": {
    "daisyui": ">=5.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "tailwindcss": ">=4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@chromatic-com/storybook": "^4.1.2",
    "@happy-dom/global-registrator": "^20.0.10",
    "@storybook/addon-a11y": "^10.0.5",
    "@storybook/addon-docs": "^10.0.5",
    "@storybook/react-vite": "^10.0.7",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "daisyui": "^5.4.5",
    "playwright": "^1.56.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "release-it": "^19.0.6",
    "storybook": "^10.0.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react-day-picker": "^9.11.1"
  },
  "private": false
}
