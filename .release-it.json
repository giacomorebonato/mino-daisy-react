{
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "${version}",
    "push": true,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true,
    "publishArgs": [
      "--provenance",
      "--access",
      "public"
    ],
    "skipChecks": true
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "hooks": {
    "before:init": [
      "bun run build"
    ]
  }
}