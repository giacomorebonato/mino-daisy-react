{
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "${version}",
    "push": true,
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true,
    "skipChecks": true,
    "publishArgs": ["--provenance", "--access", "public"]
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "hooks": {
    "before:init": ["bun run build"]
  }
}
